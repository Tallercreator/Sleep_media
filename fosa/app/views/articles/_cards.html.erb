<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% articles.each do |article| %>
    <div class="bg-white rounded-lg overflow-hidden shadow hover:shadow-lg transition">
      <%= image_tag article.image_url, class: "w-full h-48 object-cover" if article.image_url.present? %>
      <div class="p-4">
        <h4 class="text-xl font-semibold mb-2">
          <%= link_to article.title, article_path(article), class: "hover:text-teal-600" %>
        </h4>
        <p class="text-sm text-gray-600 mb-4"><%= truncate(article.summary, length: 100) %></p>
        <%= link_to "Читать далее →", article_path(article),
                    class: "text-teal-600 hover:underline font-medium" %>
      </div>
    </div>
  <% end %>
</div>
